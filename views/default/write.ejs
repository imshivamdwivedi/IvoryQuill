<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/profile.css">
</head>
<body>
    <header class="post-header">
        <img class="logo" src="images/logo/IvoryQuill.png" alt="logo">
        <nav class="navbar-expand-md">
            <button class="navbar-toggler collapsed" onclick="showHideNav()" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              <div></div>
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav page-nav">
                    <li class="nav-item"> <a href="/profile">Profile</a> </li>
                    <li class="nav-item"> <a href="#">Submission Status</a> </li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container postEntry">
        <form>
            <input class="form-control post-title-box" type="text" id="title" placeholder="Title" value="" autofocus required>
            <textarea class="form-control post-body-box" id="data" col="30" rows="10",value="" required></textarea>
            <label class="terms-checkbox" for="">
                <input class="terms-checkbox" type="checkbox" id=""> I agree to the <a href="#">Terms & Conditions</a></input>
            </label>
            <br>
            <button class="btn btn-primary "  id="submit">Submit</button>
        </form>
    </section>
    <div id="token" name="hid" data-test=<%-Token%>></div>
    <div id="Id" name="hid" data-test=<%-Id%>></div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="javascripts/profile.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>

<script>
console.log(document.querySelector('#token').dataset.test);
$(document).ready(function(){
    $('#submit').click(function(){
          var content={};
          content.title=document.querySelector('#title').value;
          content.data=document.querySelector('#data').value;  
          $.ajax({
                type: 'POST',
                url: '/api/blog/write/'+document.querySelector('#Id').dataset.test,
                contentType: 'application/json',
                headers: {
                 Authorization: 'Bearer '+document.querySelector('#token').dataset.test
                },
                data:JSON.stringify(content),
                    success: function(data) {
						if(data.status == 201)
							alert("You Submitted Article Thank you !");
                      }
		  });		  
	});
});
    </script>

</body>
</html>